generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  login      String   @unique
  password   String
  version    Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Track {
  id         String   @id @default(uuid())
  name       String
  artistId   String?
  albumId    String?
  duration   Int

  favorites  Favorite[]
}

model Artist {
  id         String   @id @default(uuid())
  name       String
  grammy     Boolean

  favorites  Favorite[]
}

model Album {
  id         String   @id @default(uuid())
  name       String
  year       Int
  artistId   String?

  favorite  Favorite[]
}

model Favorite {
  artistId   String
  albumId    String
  trackId    String

  artist     Artist @relation(fields: [artistId], references: [id])
  track      Track @relation(fields: [trackId], references: [id])
  album      Album @relation(fields: [albumId], references: [id])

  @@id([artistId, albumId, trackId])
}